{% extends "Base/Base.html.twig" %}
{% block content %}

    {% for mem in memes %}
        <div class="container mb-5">
            <a href="{{ path('single', {'slug': mem.slug}) }}">
                <div class="card soloCard col-md-8 black">
                    <p class="h3 text-uppercase text-center mb-0 text-white">{{ mem.title }}</p>
                    <div class="embed-responsive embed-responsive-21by9">
                        <video class="embed-responsive embed-responsive-21by9" controls>
                            <source src="{{ asset('bundles/memes/uploads/'~mem.image) }}">
                        </video>

                    </div>
                </div>
            </a>
            <div class="container">
                <div class="btn-group rounded">
                    <button class="btn btn-danger"><i class="fas fa-thumbs-up m-1"></i></button>
                    <button class="mr-1">{{ mem.ratePositive is null ? 0 : mem.ratePositive }}</button>
                </div>
                <div class="btn-group">
                    <button class="btn btn-info"><i class="fas fa-thumbs-down m-1"></i></button>
                    <button>{{ mem.rateNegative is null ? 0 : mem.rateNegative }}</button>
                </div>
                <p class="text-white">{{ mem.date|date("d/m/Y") }}</p>
            </div>
        </div>
    {% endfor %}



{% endblock %}